# Application Configuration
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=info

# JWT Configuration (REQUIRED - Generate strong random secret)
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
JWT_EXPIRATION=3600

# Database Configuration (REQUIRED)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=task_manager
DB_USER=your_db_user
DB_PASS=your_db_password
DB_ROOT_PASSWORD=your_root_password

# Test Database Configuration
DB_TEST_HOST=localhost
DB_TEST_PORT=3307
DB_TEST_NAME=task_manager_test

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Cache Configuration
CACHE_TYPE=redis
CACHE_TTL=1800

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_BURST=10

# Security Configuration
ENABLE_XSS_PROTECTION=true
ENABLE_SQL_INJECTION_DETECTION=true

# Performance Configuration
MAX_INPUT_LENGTH=2000
MAX_TITLE_LENGTH=255
PASSWORD_MIN_LENGTH=8

# Docker Configuration
APP_PORT=8080
LOG_PATH=/tmp/task-manager-logs

# API Configuration
API_KEY=your-api-key-here
API_KEYS=dev-key-123,test-key-456,admin-key-789
TEST_API_BASE_URL=http://localhost:8080

# Xdebug Configuration (Development)
XDEBUG_MODE=debug,develop
XDEBUG_CONFIG=client_host=host.docker.internal client_port=9003
PHP_IDE_CONFIG=serverName=task-manager-api