# Test Environment Configuration
# Copy this file to .env.test and customize for your test environment

# API Configuration
TEST_API_BASE_URL=http://localhost:8080
TEST_API_KEY=test-secure-key-12345-not-production

# Alternative test keys for multi-key testing
TEST_API_KEY_DEV=test-dev-key-67890
TEST_API_KEY_ADMIN=test-admin-key-abcdef

# Database Configuration (Test)
DB_TEST_HOST=localhost
DB_TEST_PORT=3307
DB_TEST_NAME=task_manager_test
